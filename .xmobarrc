Config { font = "-misc-fixed-*-*-*-*-10-*-*-*-*-*-*-*"
       , bgColor = "black"
       , fgColor = "grey"
       , position = Top
       , lowerOnStart = True
       , commands = [ Run Weather "ETOU" ["-t","<station>: <tempC>C","-L","18","-H","25","--normal","green","--high","red","--low","lightblue"] 36000
                    , Run Network "eth0" ["-L","0","-H","32","--normal","green","--high","red"] 10
                    , Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Swap [] 10
                    , Run Com "uname" ["-s","-r"] "" 36000
                    , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
                    , Run StdinReader
                    , Run CoreTemp ["-t","Temp: <core0>|<core1>|<core2>|<core3>","-L","40","-H","60","-l","lightblue","-n","gray90","-h","red"] 50
					, Run Com "mpc | head -n1" [] "music" 5
					, Run Com "getVolume.sh" [] "volume" 1
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ <fc=#4444ff>%music%</fc> | Vol: %volume% | %cpu% | %memory% | %eth0% | %coretemp% | <fc=#ee9a00>%date%</fc>"
       }
